{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}
<main>
  <section>
    <div class="form">
      <h1 class="form__title">Create user</h1>
      <form method="POST" action="/success-info">
        <div class="form__content">
          <div class="form__field">
            <label for="email" class="form__label">Email adress:</label>
            <input type="email" name="email" class="form__input">
          </div>
          <div class="form__field">
            <label for="login" class="form__label">Nickname:</label>
            <input type="login" name="login" class="form__input">
          </div>
          <div class="form__field">
            <label for="password" name="password" class="form__label">Password</label>
            <input type="password" name="password" class="form__input">
          </div>
          <button class="form__btn">Submit</button>
        </div>
      </form>
    </div>
  </section>
  <section>
    <div class="form">
      <h1 class="form__title">List of users</h1>
      <div class="user-list">
        {{#with data.users}}
        {{#if isEmpty}}
        <mark>List of users is empty</mark>
        {{else}}
        <ul>
          {{#each list}}
          <li>{{email}} | {{login}} | {{id}} <a href="/success-info?id={{id}}">Delete</a> </li>
          {{/each}}
        </ul>
        {{/if}}
        {{/with}}
      </div>


    </div>
  </section>
  <section>
    <div class="form">
      <h1 class="form__title">Update user</h1>
      <form method="POST" action="/user-update">
        <div class="form__content">
          <div class="form__field">
            <label for="email" class="form__label">Id</label>
            <input type="id" name="id" class="form__input">
          </div>
          <div class="form__field">
            <label for="login" class="form__label">New Email adress:</label>
            <input type="email" name="email" class="form__input">
          </div>
          <div class="form__field">
            <label for="password" name="password" class="form__label">Password</label>
            <input type="password" name="password" class="form__input">
          </div>
          <button class="form__btn">Submit</button>
        </div>
      </form>
    </div>
  </section>
</main>


